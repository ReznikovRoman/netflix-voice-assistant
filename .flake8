[flake8]
max-line-length = 120
show-source = true
statistics = true
inline-quotes = "
extend-exclude =
    venv*,
    .git,
    drafts,
    .*
ignore =
    # Line break occurred after a binary operator
    W504,
    # Missing docstrings
    D100,D101,D102,D103,D104,D105,D106,D107,
    # First line should be in imperative mood
    D401
per-file-ignores =
    # First argument of a method should be named 'self'
    */config/**.py:N805
    */domain/assistant/alice/schemas.py:N805
